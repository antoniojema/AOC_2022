{
    "compilerOptions": {
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "target": "ESNext",
        "module": "ESNext",
        "sourceMap": true,
        "outDir": "out",
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
